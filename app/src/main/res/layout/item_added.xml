<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/child_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout_added"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:dragEdge="right"
        app:layout_constraintTop_toTopOf="parent"
        app:mode="normal">

        <!-- Your secondary layout here -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/delete_added"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_odelate_item_36" />


            <CheckBox
                android:id="@+id/add_fev_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:button="@drawable/selector_wishlist_item"
                android:gravity="center" />
        </LinearLayout>

        <!-- Your main layout here -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_click_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/item_eng"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="0.8"
                        android:padding="7dp"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/flag_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="#C35AB6FF"
                        android:gravity="center"
                        android:text="ðŸ‡¬ðŸ‡§ ðŸ‡ºðŸ‡¿"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/item_uz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="0.8"
                        android:padding="7dp"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                </LinearLayout>


                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false"
                    app:el_parallax="1">

                    <TextView
                        android:id="@+id/description_item_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="16dp"
                        android:text="Word description"
                        android:textColor="@color/dictionary_back_blue"
                        android:textSize="20sp" />

                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

